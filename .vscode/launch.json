    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File with debug/config.json",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "${cwd}/examples/debug/config.json"
            ],            
        },
        {
            "name": "Python: Swagger",
            "type": "python",
            "request": "launch",
            // "program": "${file}",
            "program": "${cwd}/gui/backend-swagger/openapi_server",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceRoot}/gui/backend-swagger"
            }
        },
        {
            "name": "perspective_transformation",
            "type": "python",
            "request": "launch",
            "program": "${cwd}/owl/module_perspective_transform.py",
            "args": [
                "${cwd}/examples/perspective_transform/config.json"
            ],
            "console": "internalConsole"
        },
        {
            "name": "Python: Swagger",
            "type": "python",
            "request": "launch",
            // "program": "${file}",
            "program": "${cwd}/gui/backend-swagger/openapi_server",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceRoot}/gui/backend-swagger"
            }
        },
        {
            "name": "Python: Swagger, but better",
            "type": "python",
            "request": "launch",
            // "program": "${file}",
            "program": "${cwd}/gui/backend/openapi_server",
            "console": "integratedTerminal",
            "env": { "PYTHONPATH": "${workspaceRoot}/gui/backend"}
        },
    ]
}
